<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/results_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/survey_question_fragment_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight=".8"/>

   <FrameLayout
       android:id="@+id/survey_question_fragment_container"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/results_fragment_container"
       tools:layout_editor_absoluteX="108dp"
       app:layout_constraintVertical_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>